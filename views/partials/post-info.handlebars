<article class="post">
  <div class="title">
    <a>{{title}}</a>
  </div>
  <div>
    <a>{{contents}}</a>
  </div>
  <div class="meta">
    {{vote_count}} point(s) by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
  </div>
</article>